<!-- LOGO -->

<div class="container login-background mt-4 pt-4">
  <div class="row justify-content-center mt-4 p-4" style="height: 800px">
    <div class="col-xs-12 col-sm-6 col-md-6 custom-margin-top">
      <div class="form-login mb-4">
        <strong><h2>Login</h2></strong>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
              <div class="form-actions">
                <%= f.button :submit, "Entrar", class: "btn btn btn-primary" %>
              </div>
          <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
