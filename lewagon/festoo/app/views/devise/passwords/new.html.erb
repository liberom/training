<div class="container login-background mt-4 pt-4">
  <div class="row justify-content-center mt-4 p-4" style="height: 800px">
    <div class="col-xs-12 col-sm-6 col-md-6 custom-margin-top">
      <div class="form-login mb-4">
      <strong><h2>Esqueceu a senha?</h2></strong>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Enviar instruções de senha" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
