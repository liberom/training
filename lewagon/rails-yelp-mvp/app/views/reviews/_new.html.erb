<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-group"><%= f.select :rating, [0, 1, 2, 3, 4, 5], class: 'btn dropdown-menu', include_blank: true %></div>
    <div class="form-group"><%= f.input :content, class: 'form-control' %></div>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
</div>
