<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <% if @restaurant.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-input">
      <div class="form-group">
        <%= f.input :name, class: 'form-control' %></div>
      <div class="form-group"><%= f.input :category, class: 'form-control' %></div>
      <div class="form-group"><%= f.input :address, class: 'form-control' %></div>
      <div class="form-group"><%= f.input :phone_number, class: 'form-control' %></div>
    </div>
    <div class="form-action">
      <%= f.submit "add restaurant", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
