<div class="container">
  <%= form_for(@task) do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field :title %>
    </div>
    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>
    <div class="form-group">
      <div class="checkbox-inline">
        <%= t.label :completed %>
        <%= t.check_box :completed %>
      </div>
    </div>
    <%= t.submit class: 'btn btn-primary'%>
  <% end %>
</div>
